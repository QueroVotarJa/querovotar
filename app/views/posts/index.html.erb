<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Estado</th>
      <th>Motivo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render 'form', post: @post %>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.nome %></td>
        <td><%= post.estado %></td>
        <td><%= post.motivo %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

